{% extends "admin/base.html.twig" %}

{% block title %}Administration - Modifier le commentaire n°{{comment.id}}{% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modification du commentaire n°{{comment.id}}</h1>
        <div class="alert alert-info">
            <strong>Annonce liée : </strong>{{comment.ad.title}}<br>
            <strong>Autheur : </strong>{{comment.author.fullName}}<br>
            <strong>Date de création : </strong>{{comment.createdAt|date('d/m/Y H:i')}}<br>
            <strong>Note donnée : </strong>{{comment.rating}}
        </div>

        {{ form_start(form) }}
        {{ form_widget(form.content) }}
        <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i>Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

